<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SaveActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:id="@+id/app_profile_image"
        android:src="@drawable/pimage"/>
    <TextView
        android:id="@+id/app_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Image"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_below="@+id/app_profile_image"

        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        />
    <EditText
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_image"
        android:layout_margin="15dp"
        android:hint="App Name"
        android:padding="10dp"
        />
    <EditText
        android:id="@+id/app_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/app_name"
        android:layout_margin="15dp"
        android:hint="Password"
        android:padding="10dp"
        />
    <Button
        android:id="@+id/update_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_password"
        android:layout_margin="15dp"
        android:background="@color/colorPrimaryDark"
        android:text="Update"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:textAllCaps="false"/>

</RelativeLayout>